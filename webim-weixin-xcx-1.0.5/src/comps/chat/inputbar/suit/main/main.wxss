.text-input {
	width: 100%;
	height: 40px;
	padding: 0;
	display: block;
}

.news {
	width: 79%;
	height: 30px;
	border: 1px solid #CFCFCF;
	border-radius: 5px;
	font-size: 14px;
	padding-left: 4px;
	display: inline-block;
	float: left;
	margin: 4px 2px 4px 6px;
}

.send_btn {
	width: 40px;
	height: 30px;
	line-height: 30px;
	font-size: 14px;
	color: #000;
	padding: 0;
	display: inline-block;
	float: right;
	margin: 4px 8px auto auto;
	background-color: #fff;
}
